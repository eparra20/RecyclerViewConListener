<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/celdaPersonajeImageViewPersonaje"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE DE PERSONAJE"
            android:gravity="center"
            android:id="@+id/celdaPersonajeTextViewNombrePersonaje"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SERIE DE PERSONAJE"
            android:gravity="center"
            android:id="@+id/celdaPersonajeTextViewSerieOrigen"/>

    </LinearLayout>


</LinearLayout>